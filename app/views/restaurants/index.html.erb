<div class="container mt-5">
  <h1 class="mb-4" >Restaurants</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %>
            </h5>
            <p class="card-text mb-1"><strong>Cuisine:</strong> <%= restaurant.category.capitalize %></p>
            <p class="card-text"><strong>Address:</strong> <%= restaurant.address %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
